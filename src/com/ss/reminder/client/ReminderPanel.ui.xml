<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel ui:field="elMain" styleName="rmnd">
	   
	  <div class="rmnd-top">
	       <a class="logo" href="http://reminder.sinica.me">SSReminder</a>
	       <div class="logo-text">service, which helps you to remember important dates</div>
	       
	       <div class="rmnd-source-w">
                <a class="rmnd-source-link" href="https://github.com/ssinica/ssreminder">Source code on github</a>
           </div>
	  </div>
	  
	  <div class="rmnd-collage">
	       <img width="667px" height="250px" src="/images/collage250.jpg"></img>
	  </div>
	   
      <div class="rmnd-fld" ui:field="elEmailFld">		  
		  <input class="rmnd-in" ui:field="elEmail" type="text" placeholder="Your email"></input>
	  </div>
	  
	  <div class="rmnd-fld" ui:field="elSecretFld">          
          <input class="rmnd-in" ui:field="elSecret" type="text" placeholder="Secret phrase"></input>
      </div>
      
      <div class="rmnd-fld" ui:field="elDescriptionFld">
          <input class="rmnd-in" ui:field="elDescription" type="text" placeholder="Task description"></input>
      </div>
	       	   
       <div class="rmnd-fld" id="date3"></div>
       
       <div class="rmnd-fld rmnd-btn-w">
            <a class="btn btn-large btn-success rmnd-btn" ui:field="elBtn"><i class="icon-share icon-white"></i>Remember</a>
       </div>
               
	</g:HTMLPanel>
</ui:UiBinder> 